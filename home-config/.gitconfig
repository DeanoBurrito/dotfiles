[credential]
	helper = store
[user]
	name = dean
	email = dean243@hotmail.com
    signingKey = ~/.ssh/id_ed25519.pub
[commit]
    gpgsign = true
[tag]
    gpgsign = true
[color]
	ui = auto
[advice]
	statusHints = off
[core]
    pager = delta
[interactive]
    diffFilter = delta --color-only
[push]
    autoSetupRemote = true
[merge]
    conflictStyle = zdiff3
[delta]
    navigate = true
    dark = true
    line-numbers = true
[gpg]
    format = ssh
[format]
    signoff = true
[gpg "ssh"]
	allowedSignersFile = /home/dean/.ssh/allowed_signers
